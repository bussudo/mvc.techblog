<div class="dashboard">
    <div>
        <h1>My Blogs</h1>
        <div id='blog-buttons' class="row">
            <button type="info" class="btn btn-outline-info m-3" class="edit-blog"><a
                    href="/createBlog">Create</a></button>
        </div>
        <div>
            <form id="blogForm">
                <div id="prof-container" class="container h-100 bg-light align-items-center rounded">
                    <div class="col">
                        <BR>
                        {{#each blogdata}}
                        <div class="blog-card">
                            <div class=" form-floating ">
                                <B> {{title}}</B>
                            </div>
                            <div id='blog-buttons' class="row">

                                <button type="info" class="btn btn-outline-info m-3" class="edit-blog"><a
                                        href="/Blog/{{id}}">Edit</a></button>
                            </div>
                        </div>
                        {{/each}}

                    </div>
                </div>
            </form>
