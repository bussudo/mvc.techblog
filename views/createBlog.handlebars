<div class="create">
    <div>
        <h1>Create New Blog</h1>
        <section>
            <h2>Title</h2>
            <input placeholder="Enter title here" value="{{title}}" id="titleBlog" class="form-input" type="text">
            <form id="blogForm">
                <h2>Content</h2>
                <textarea class="contentArea" placeholder="Enter content here" value="{{content}}"
                    id="contentBlog"></textarea>
                <label value="{{createDate}}" id="createDateBlog" class="hidden">
                </label>
            </form>
        </section>
    </div>
    <div id="blog-buttons" class="row">
        <button type="success" id="create-blog" class="btn btn-outline-dark m-3">
            <a href="dashboard">Submit</a></button>

        <button id="cancel-blog" class="btn btn-outline-warning m-3">Cancel</button>
        </form>
    </div>
    </section>
</div>
</div>

<script src="/js/createBlog.js"></script>
