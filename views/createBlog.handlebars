<div>
    <h1>Create New Blog
        <section>
            <h2>Title</h2>
            <input placeholder="Enter title here" value="{{title}}" id="titleBlog" type="text">
            <h2>Content</h2>
            <textarea placeholder="Enter content here" value="{{content}}" id="contentBlog"></textarea>
            <div id="blog-buttons" class="row">
                <button type="submit" id="create-blog">Submit</button>
                <button id="cancel-blog" class="col btn btn-danger m-3">Cancel</button>
            </div>
        </section>
    </h1>
</div>

<script src="./js/blog.js"></script>